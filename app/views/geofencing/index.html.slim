javascript:
  var map;
  var infoWindow;
  check_pick_up_lat_long();

  // Define the LatLng coordinates for the outSkirt polygon.
  var outSkirtCoords = [
    { lat: 51.540997, lng: -0.128403 },
    { lat: 51.549965, lng: -0.097504 },
    { lat: 51.540997, lng: -0.073128 },
